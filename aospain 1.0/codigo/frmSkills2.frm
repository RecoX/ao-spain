Private Sub Image1_Click(Index As Integer)
On Error Resume Next

Dim k, i As Integer
Call PlayWaveDS(SND_CLICK)
    
Select Case Index
    Case 1
        If frmMain.Socket1.Connected Then frmMain.Socket1.Disconnect
        
        i = 1
        For Each k In text1
            UserSkills(i) = k.Caption
            i = i + 1
        Next
        Me.Visible = False
        frmMain.Socket1.HostName = frmConnect.IPTxt.Text
        frmMain.Socket1.RemotePort = frmConnect.PortTxt.Text
        SendNewChar = True
        Me.MousePointer = 11
        frmMain.Socket1.Connect
        Me.MousePointer = 1
    Case 0
        Unload Me
        frmSkills.Show vbModal
End Select
End Sub

Private Sub command1_Click(Index As Integer)
Call PlayWaveDS(SND_CLICK)
Dim indice
If Index Mod 2 = 0 Then
    If SkillPoints > 0 Then
        indice = Index \ 2
        text1(indice).Caption = Val(text1(indice).Caption) + 1
        SkillPoints = SkillPoints - 1
    End If
Else
    If SkillPoints < 10 Then
        
        indice = Index \ 2
        If Val(text1(indice).Caption) > 0 Then
            text1(indice).Caption = Val(text1(indice).Caption) - 1
            SkillPoints = SkillPoints + 1
        End If
    End If
End If

Puntos.Caption = "Puntos:" & SkillPoints

End Sub

Private Sub Form_Load()

Image1(0).Picture = LoadPicture(App.Path & "\Graficos\BotónVolver.jpg")
Image1(1).Picture = LoadPicture(App.Path & "\Graficos\BotónSiguiente.jpg")

SkillPoints = 10

Puntos.Caption = "Puntos:" & SkillPoints

Dim l
Dim i As Integer
i = 1
For Each l In Label2
    l.Caption = SkillsNames(i)
    l.AutoSize = True
    i = i + 1
Next
i = 0

For i = 0 To command1.UBound
    If i Mod 2 = 0 Then
        command1(i).Picture = LoadPicture(App.Path & "\Graficos\BotónMás.jpg")
    Else
        command1(i).Picture = LoadPicture(App.Path & "\Graficos\BotónMenos.jpg")
    End If
Next
End Sub

